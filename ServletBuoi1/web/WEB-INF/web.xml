<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>TinhHcn2</servlet-name>
        <servlet-class>controller.TinhHcn2</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TinhHcn</servlet-name>
        <servlet-class>controller.TinhHcn</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MayTinh</servlet-name>
        <servlet-class>controller.MayTinh</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>XemDiem</servlet-name>
        <servlet-class>controller.XemDiem</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <context-param>
        <param-name>user</param-name>
        <param-value>hanhdeptrai</param-value>
    </context-param>
    <context-param>
        <param-name>pass</param-name>
        <param-value>sasukee</param-value>
    </context-param>
    <servlet-mapping>
        <servlet-name>TinhHcn</servlet-name>
        <url-pattern>/tinhtoan</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TinhHcn2</servlet-name>
        <url-pattern>/tinh2</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MayTinh</servlet-name>
        <url-pattern>/mt</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>XemDiem</servlet-name>
        <url-pattern>/xemdiem</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
